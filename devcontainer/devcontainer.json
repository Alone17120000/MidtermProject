{
  "name": "Node.js & MongoDB (Compose)",
  // Chỉ định dùng Docker Compose
  "dockerComposeFile": "docker-compose.yml",
  // Service chính mà VS Code sẽ chạy bên trong
  "service": "app",
  // Thư mục làm việc
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  // Các cấu hình khác có thể giữ lại nếu muốn
   "forwardPorts": [4000, 3000],
   "postCreateCommand": "cd source/backend && npm install", // Chạy sau khi container app được tạo
   "customizations": {
     "vscode": {
       "settings": {},
       "extensions": [
         "dbaeumer.vscode-eslint",
         "esbenp.prettier-vscode",
         "apollographql.vscode-apollo"
       ]
     }
   }
}
